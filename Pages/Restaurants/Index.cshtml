@page
@model NewSound.Pages.Restaurants.IndexModel

@{
    ViewData["Title"] = "Restaurants";
}

<h1>Restaurants</h1>

<p>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-page="Create">Create New</a>
    }
</p>

<form>
    <p>
        Search for cuicine:
        <input type="text" asp-for="SearchString" />
        <input type="submit" value="Search" />
        <a asp-page="./Index">Back to full List</a>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Restaurants[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurants[0].Cuisine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurants[0].Specialty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurants[0].Mile)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Restaurants[0].ConcertHall)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Restaurants) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cuisine)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mile)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConcertHall.Place)
            </td>
            <td>
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-page="./Edit" asp-route-id="@item.RestaurantID">Edit</a>
                }

                | <a asp-page="./Details" asp-route-id="@item.RestaurantID">Details</a> |
                
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-page="./Delete" asp-route-id="@item.RestaurantID">Delete</a>
                }
            </td>
        </tr>
}
    </tbody>
</table>
